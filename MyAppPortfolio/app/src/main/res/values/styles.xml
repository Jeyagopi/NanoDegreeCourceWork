<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name ="ButtonAppearance">
        <item name = "android:layout_width">@dimen/btnWidth</item>
        <item name = "android:layout_height">@dimen/btnHeight</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonAppearance.Orange">
        <item name = "android:background">#F08C35</item>
    </style>

    <style name="ButtonAppearance.Red">
        <item name = "android:background">#FF1744</item>
    </style>

    <style name="MainCaptionAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginTop">4dp</item>
        <item name = "android:layout_marginBottom">12dp</item>
        <item name = "android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
</resources>
